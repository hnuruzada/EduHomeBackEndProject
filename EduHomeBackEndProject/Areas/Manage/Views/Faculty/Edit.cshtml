@model Faculty
@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-4">
    <h3>Edit Faculty Section</h3>
    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
    <form method="post" class="mt-3">
  <div class="mb-3">
    <label asp-for="@Model.FacultyName" class="form-label">Faculty Name</label>
    <input  asp-for="@Model.FacultyName" class="form-control" >
    <span class="mt-2 text text-danger" asp-validation-for="@Model.FacultyName"></span>
  </div>
  <div class="mb-3">
    <label asp-for="@Model.DepartmentName" class="form-label">Department Name</label>
    <input  asp-for="@Model.DepartmentName" class="form-control" >
    <span class="mt-2 text text-danger" asp-validation-for="@Model.DepartmentName"></span>
  </div>
  
  <button type="submit" class="btn btn-primary">Edit</button>
</form>
</div>


@model Event
@{
    ViewData["Title"] = "Create";
     List<Speaker> speakers = (List<Speaker>)ViewBag.Speakers;
}
@section CSS{
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">

}
<div class="container mt-3">
    <h2>Create Event section</h2>
    <form method="post" class="mt-3" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="@Model.ImageFile"  class="form-label">Select image</label>
            <input asp-for="@Model.ImageFile" accept="image/*" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.ImageFile"></span>
        </div>
        
        <div class="mb-3">
            <label asp-for="@Model.Date" class="form-label">Date</label>
            <input type="date" asp-for="@Model.Date" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.Date"></span>
        </div>

        <div class="mb-3">
            <label asp-for="@Model.Title" class="form-label">Title</label>
            <input asp-for="@Model.Title" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.Title"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Description" class="form-label">Description</label>
            <input asp-for="@Model.Description" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.Description"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.StartTime" class="form-label">Start Time</label>
            <input type="time" asp-for="@Model.StartTime" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.StartTime"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.FinishTime" class="form-label">Finish Time</label>
            <input type="time" asp-for="@Model.FinishTime" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.FinishTime"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Venue" class="form-label">Venue</label>
            <input type="text" asp-for="@Model.Venue" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.Venue"></span>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="@Model.SpeakerIds">Speakers</label>
            <select class="form-control" asp-for="@Model.SpeakerIds" asp-items="@(new SelectList(speakers,"Id","Name"))">
            </select>
            
        </div>
            
        
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js" integrity="sha512-37T7leoNS06R80c8Ulq7cdCDU5MNQBwlYoy1TX/WUsLFC2eYNqtKlV0QjH7r8JpG/S0GUMZwebnVFLPd6SU5yg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js" integrity="sha512-o6XqxgrUsKmchwy9G5VRNWSSxTS4Urr4loO6/0hYdpWmFUfHqGzawGxeQGMDqYzxjY9sbktPbNlkIQJWagVZQg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
}

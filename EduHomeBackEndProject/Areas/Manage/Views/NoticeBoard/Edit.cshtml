@model NoticeBoard
@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-4">
    <h3>Edit Notice Board Section</h3>
    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
    <form method="post" class="mt-3">
  <div class="mb-3">
    <label asp-for="@Model.Date" class="form-label">Date</label>
    <input  asp-for="@Model.Date" class="form-control" type="datetime-local" >
    <span class="mt-2 text text-danger" asp-validation-for="@Model.Date"></span>
  </div>
  <div class="mb-3">
    <label asp-for="@Model.Description" class="form-label">Description</label>
    <input  asp-for="@Model.Description" class="form-control" >
    <span class="mt-2 text text-danger" asp-validation-for="@Model.Description"></span>
  </div>
  
  
  <button type="submit" class="btn btn-primary">Edit</button>
</form>
</div>


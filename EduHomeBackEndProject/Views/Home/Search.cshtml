@model HomeVM
@{
    ViewData["Title"] = "Search";
}


@if (Model.Courses.Count == 0)
{
    <span></span>
}
else
{
    <div style="display:flex!important" class="courses-area two pt-150 pb-150 text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="section-title">
                        <img src="~/assets/img/icon/section1.png" alt="section-title">
                        <h2>COURSES WE OFFER</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                @await Html.PartialAsync("_CoursePartialView", Model.Courses)
            </div>
        </div>
    </div>

}

@if (Model.Events.Count != 0)
{
    <div class="event-area two text-center pt-100 pb-145">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="section-title">
                        <img src="~/assets/img/icon/section.png" alt="section-title">
                        <h2>UPCOMMING EVENTS</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                @await Html.PartialAsync("_EventPartialView", Model.Events)
            </div>
        </div>
    </div>

}
else
{

}

@if (Model.Blogs.Count != 0)
{
    <div class="blog-area pt-150 pb-150">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="section-title text-center">
                        <img src="~/assets/img/icon/section.png" alt="section-title">
                        <h2>LATEST FROM BLOG</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                @await Html.PartialAsync("_BlogPartialView", Model.Blogs)
            </div>
        </div>
    </div>

}
else
{

}

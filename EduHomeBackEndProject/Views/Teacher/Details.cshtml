@model TeacherDetailVM
@{
    ViewData["Title"] = "Details";
}

<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>teachers / details</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Teacher Start -->
<div class="teacher-details-area pt-150 pb-60">
    <div class="container">
        <div class="row">
            <div class="col-md-5 col-sm-5 col-xs-12">
                <div class="teacher-details-img">
                    <img style="width:100%;" src="~/Assets/img/teacher/@Model.Teacher.Image" alt="teacher">
                </div>
            </div>
            <div class="col-md-7 col-sm-7 col-xs-12">
                <div class="teacher-details-content ml-50">
                    <h2>@Model.Teacher.Name @Model.Teacher.Surname</h2>
                    <h5>@Model.TeacherPositions.FirstOrDefault().Position.Name</h5>
                    <h4>about me</h4>
                    <p>@Model.Teacher.AboutMe</p>
                    <ul>
                        <li><span>degree: </span>@Model.Teacher.Degree</li>
                        <li><span>experience: </span>@Model.Teacher.Experience</li>
                        <li>
                            <span>hobbies: </span>@foreach (var hobbie in Model.TeacherHobbies)
                            {
                                @(hobbie.Hobbie.Name+ ",")
                            }
                        </li>
                        <li>
                            <span>faculty: </span>@foreach (var faculty in Model.TeacherFaculties)
                            {
                                @(faculty.Faculty.FacultyName+ "," + faculty.Faculty.DepartmentName)
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3 col-sm-4">
                <div class="teacher-contact">
                    <h4>contact information</h4>
                    <p><span>mail me : </span>@Model.Teacher.Mail</p>
                    <p><span>make a call : </span>@Model.Teacher.PhoneNumber</p>
                    <p><span>skype : </span> stuart.k</p>
                    <ul>
                        @foreach (var social in Model.SocialMedias)
                        {
                            <li><a href="@social.SocialUrl">@Html.Raw(social.SocialIcon)</a></li>
                        }
                    </ul>
                </div>
            </div>
            <div class="col-md-9 col-sm-8">
                <div class="skill-area">
                    <h4>skills</h4>
                </div>
                <div class="skill-wrapper">
                    <div class="row">
                        @foreach (var skill in Model.Skills)
                        {
                            <div class="col-sm-4">
                                <div class="skill-bar-item">
                                    <span>@skill.Name</span>
                                    <div class="progress">
                                        <div data-wow-delay="1.2s" data-wow-duration="1.5s" style="width: @skill.DegreePoint%; visibility: visible; animation-duration: 1.5s; animation-delay: 1.2s; animation-name: fadeInLeft;" data-progress="50%" class="progress-bar wow fadeInLeft">
                                            <span class="text-top" style="color:black;">@skill.DegreePoint%</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Teacher End -->

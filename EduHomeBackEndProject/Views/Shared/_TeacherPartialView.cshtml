@model List<Teacher>

@foreach (Teacher teacher in Model)
{
     <div class="col-md-3 col-sm-4 col-xs-12">
                        <div class="single-teacher mb-45">
                            <div class="single-teacher-img">
                                <a asp-controller="teacher" asp-action="details" asp-route-id="@teacher.Id"><img src="~/Assets/img/teacher/@teacher.Image" alt="teacher"></a>  
                            </div>
                            <div class="single-teacher-content text-center">
                                <h2><a asp-controller="teacher" asp-action="details" asp-route-id="@teacher.Id">@teacher.Name @teacher.Surname</a></h2>
                                <h4>Associate Professor</h4>
                                <ul>
                                    @foreach ( SocialMedia social in teacher.SocialMedias)
                                   {
                                       <li><a asp-controller="teacher" asp-action="details" asp-route-id="@teacher.Id">@Html.Raw(social.SocialIcon)</a></li>
                                   }
                                   
                                </ul>
                            </div>
                        </div>
                    </div>
}
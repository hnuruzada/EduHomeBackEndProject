        @section Scripts{
<script>
                    $(document).on('keyup', `#Event-Search`, function () {

        $("#New-Events").empty()
        if ($(this).val().length > 0) {
            $.ajax({
                url: `/Event/Search`,
                data: {
                    "searching": $(this).val(),
                },
                type: "Get",
                success: function (res) {

                    $("#Old-Events").css("display", "none")

                    $("#New-Events").append(res)

                }
            })
        }
        else {
            $("#Old-Events").css("display", "block")

        }

    })
</script>

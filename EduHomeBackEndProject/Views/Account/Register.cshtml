@model RegisterVM
@{
    ViewData["Title"] = "Register";
}

<div class="banner-area-wrapper">
            <div class="banner-area text-center">	
                <div class="container">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="banner-content-wrapper">
                                <div class="banner-content">
                                    <h2>Register</h2> 
                                </div> 
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>    
		<!-- Banner Area End -->
        <!-- Register start -->
        <div class="register-area pt-150 pb-150">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-md-offset-3 text-center">
                        <div class="login">
                            <div class="login-form-container">
                                <div class="login-text">
                                    <h2>register</h2>
                                    <span>Please login using account detail bellow.</span>
                                </div>
                                <div class="login-form">
                                    <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
                                    <form  method="post">
                                        <input asp-for="Name" placeholder="Name">
                                                                            <span class="text-danger text" asp-validation-for="Name"></span>

                                        <input asp-for="Surname" placeholder="Surname">
                                        <span class="text-danger text" asp-validation-for="Surname"></span>
                                        <input asp-for="Username" placeholder="Username">
                                        <span class="text-danger text" asp-validation-for="Username"></span>
                                        <input asp-for="Email" placeholder="Email">
                                        <span class="text-danger text" asp-validation-for="Email"></span>
                                        <input asp-for="Password" placeholder="Password">
                                        <span class="text-danger text" asp-validation-for="Password"></span>
                                        <input asp-for="ConfirmPassword" placeholder="Comfirm Password">
                                        <span class="text-danger text" asp-validation-for="ConfirmPassword"></span>
                                        <div class="button-box">

                                            <div class="login-toggle-btn">
                                                <label class="form-check-label text-muted">
                                            <input asp-for="Terms" class="form-check-input">
                                            I agree to all Terms & Conditions
                                        </label>
                                        <span class="text text-danger" asp-validation-for="Terms"></span>
                                               
                                                <a href="#">Forgot Password?</a>
                                            </div>
                                            <button type="submit" class="default-btn">sign up</button>
                                        </div>
                                        <div class="text-center mt-4 font-weight-light">
                                    Already have an account? <a asp-controller="account" asp-action="login" class="text-primary">Login</a>
                                </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Register end --> 
        <!-- Subscribe Start -->
        <div class="subscribe-area pt-60 pb-70">
            <div class="container">
                <div class="row">
                    <div class="col-md-8 col-md-offset-2">
                        <div class="subscribe-content section-title text-center">
                            <h2>subscribe our newsletter</h2>
                            <p>I must explain to you how all this mistaken idea </p>
                        </div>
                        <div class="newsletter-form mc_embed_signup">
                            <form action="http://devitems.us11.list-manage.com/subscribe/post?u=6bbb9b6f5827bd842d9640c82&amp;id=05d85f18ef" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
                                <div id="mc_embed_signup_scroll" class="mc-form"> 
                                    <input type="email" value="" name="EMAIL" class="email" id="mce-EMAIL" placeholder="Enter your e-mail address" required>
                                    <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                                    <div class="mc-news" aria-hidden="true"><input type="text" name="b_6bbb9b6f5827bd842d9640c82_05d85f18ef" tabindex="-1" value=""></div>
                                    <button id="mc-embedded-subscribe" class="default-btn" type="submit" name="subscribe"><span>subscribe</span></button> 
                                </div>    
                            </form>
                            <!-- mailchimp-alerts Start -->
                            <div class="mailchimp-alerts">
                                <div class="mailchimp-submitting"></div><!-- mailchimp-submitting end -->
                                <div class="mailchimp-success"></div><!-- mailchimp-success end -->
                                <div class="mailchimp-error"></div><!-- mailchimp-error end -->
                            </div>
                            <!-- mailchimp-alerts end -->
                        </div>
                    </div>
                </div>
            </div>
        </div>

